@page
@model LaptopShopWeb.Pages.Admin.Categories.CreateModel
@{
    ViewData["Title"] = "Thêm danh mục mới";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-title">
                <i class="fas fa-plus-circle"></i> Thêm danh mục mới
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Danh mục</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card admin-card">
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Category.Name" class="form-label">
                                Tên danh mục <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Category.Name" class="form-control" placeholder="VD: Laptop Gaming" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category.Slug" class="form-label">
                                Slug (Đường dẫn URL)
                            </label>
                            <input asp-for="Category.Slug" class="form-control" placeholder="VD: laptop-gaming" />
                            <span asp-validation-for="Category.Slug" class="text-danger"></span>
                            <small class="form-text text-muted">
                                Để trống để tự động tạo slug từ tên danh mục
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category.Description" class="form-label">
                                Mô tả
                            </label>
                            <textarea asp-for="Category.Description" class="form-control" rows="4" 
                                      placeholder="Nhập mô tả cho danh mục..."></textarea>
                            <span asp-validation-for="Category.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Category.IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="Category.IsActive" class="form-check-label">
                                    Kích hoạt danh mục
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Lưu danh mục
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card admin-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Hướng dẫn
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Tên danh mục là bắt buộc
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Slug sẽ được tạo tự động nếu không nhập
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Danh mục có thể được kích hoạt hoặc vô hiệu hóa
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success"></i>
                            Chỉ danh mục kích hoạt mới hiển thị trên website
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
