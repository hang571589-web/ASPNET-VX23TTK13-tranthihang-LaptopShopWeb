@page "{id:int}"
@model LaptopShopWeb.Pages.Admin.Categories.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-title">
                <i class="fas fa-edit"></i> Chỉnh sửa danh mục
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Danh mục</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card admin-card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="Category.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Category.Name" class="form-label">
                                Tên danh mục <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Category.Name" class="form-control" />
                            <span asp-validation-for="Category.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category.Slug" class="form-label">
                                Slug (Đường dẫn URL)
                            </label>
                            <input asp-for="Category.Slug" class="form-control" />
                            <span asp-validation-for="Category.Slug" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category.Description" class="form-label">
                                Mô tả
                            </label>
                            <textarea asp-for="Category.Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Category.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Category.IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="Category.IsActive" class="form-check-label">
                                    Kích hoạt danh mục
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card admin-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Thông tin danh mục
                    </h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> @Model.Category.Id</p>
                    <p><strong>Số sản phẩm:</strong> @Model.ProductCount</p>
                    @if (Model.ProductCount > 0)
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            Danh mục này đang được sử dụng bởi <strong>@Model.ProductCount sản phẩm</strong>.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
