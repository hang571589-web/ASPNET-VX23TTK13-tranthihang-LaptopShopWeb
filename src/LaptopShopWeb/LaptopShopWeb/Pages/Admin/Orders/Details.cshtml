@page "{id:int}"
@model LaptopShopWeb.Pages.Admin.Orders.DetailsModel
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-title">
                <i class="fas fa-file-invoice"></i> Chi tiết đơn hàng
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Đơn hàng</a></li>
                    <li class="breadcrumb-item active">Chi tiết</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (Model.Order == null)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i> Không tìm thấy đơn hàng.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card admin-card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shopping-bag"></i> Sản phẩm trong đơn hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Đơn giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Order.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.ProductName</strong>
                                                @if (!string.IsNullOrEmpty(item.VariantDescription))
                                                {
                                                    <br><small class="text-muted">Phiên bản: @item.VariantDescription</small>
                                                }
                                            </td>
                                            <td>@item.UnitPrice.ToString("N0") VNĐ</td>
                                            <td>@item.Quantity</td>
                                            <td><strong>@((item.UnitPrice * item.Quantity).ToString("N0")) VNĐ</strong></td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Tổng cộng:</strong></td>
                                        <td><strong class="text-primary">@Model.Order.TotalAmount.ToString("N0") VNĐ</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card admin-card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle"></i> Thông tin đơn hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Mã đơn:</strong> @Model.Order.OrderNumber</p>
                        <p><strong>Ngày đặt:</strong> @Model.Order.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                        <p>
                            <strong>Trạng thái:</strong><br>
                            <span class="badge bg-@GetStatusBadgeClass(Model.Order.Status)">
                                @Model.Order.StatusDisplay
                            </span>
                        </p>
                        <p><strong>Phương thức thanh toán:</strong> @(Model.Order.PaymentMethod ?? "COD")</p>
                    </div>
                </div>

                <div class="card admin-card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-user"></i> Thông tin khách hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Họ tên:</strong> @Model.Order.UserName</p>
                        <p><strong>Email:</strong> @Model.Order.UserEmail</p>
                        <p><strong>Số điện thoại:</strong> @(Model.Order.ShippingPhone ?? "-")</p>
                    </div>
                </div>

                <div class="card admin-card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shipping-fast"></i> Địa chỉ giao hàng
                        </h5>
                    </div>
                    <div class="card-body">
                        <p>@Model.Order.ShippingAddress</p>
                        <p>@Model.Order.ShippingCity</p>
                        @if (!string.IsNullOrEmpty(Model.Order.Notes))
                        {
                            <hr>
                            <p><strong>Ghi chú:</strong></p>
                            <p>@Model.Order.Notes</p>
                        }
                    </div>
                </div>

                <div class="d-grid gap-2 mt-3">
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Processing" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}
