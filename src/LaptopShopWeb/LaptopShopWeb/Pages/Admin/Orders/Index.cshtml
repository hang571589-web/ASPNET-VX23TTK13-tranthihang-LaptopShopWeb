@page
@model LaptopShopWeb.Pages.Admin.Orders.IndexModel
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-title">
                <i class="fas fa-shopping-cart"></i> Quản lý đơn hàng
            </h1>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card admin-card mb-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Tìm mã đơn hàng...">
                </div>
                <div class="col-md-3">
                    <select name="status" class="form-select">
                        <option value="">-- Tất cả trạng thái --</option>
                        <option value="Pending" selected="@(Model.StatusFilter == "Pending")">Chờ xử lý</option>
                        <option value="Processing" selected="@(Model.StatusFilter == "Processing")">Đang xử lý</option>
                        <option value="Shipped" selected="@(Model.StatusFilter == "Shipped")">Đang giao hàng</option>
                        <option value="Delivered" selected="@(Model.StatusFilter == "Delivered")">Đã giao hàng</option>
                        <option value="Cancelled" selected="@(Model.StatusFilter == "Cancelled")">Đã hủy</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Lọc
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-redo"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card admin-card">
        <div class="card-body">
            @if (Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table admin-table">
                        <thead>
                            <tr>
                                <th>Mã đơn</th>
                                <th>Khách hàng</th>
                                <th>Ngày đặt</th>
                                <th>Sản phẩm</th>
                                <th>Tổng tiền</th>
                                <th>Trạng thái</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td><strong>@order.OrderNumber</strong></td>
                                    <td>
                                        @order.UserName<br>
                                        <small class="text-muted">@order.UserEmail</small>
                                    </td>
                                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <span class="badge bg-info">@order.TotalItems sản phẩm</span>
                                    </td>
                                    <td><strong>@order.TotalAmount.ToString("N0") VNĐ</strong></td>
                                    <td>
                                        <span class="badge bg-@GetStatusBadgeClass(order.Status)">
                                            @order.StatusDisplay
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info" title="Chi tiết">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (order.Status != "Delivered" && order.Status != "Cancelled")
                                            {
                                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#updateStatusModal@(order.Id)" title="Cập nhật trạng thái">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                            }
                                        </div>

                                        <!-- Update Status Modal -->
                                        <div class="modal fade" id="updateStatusModal@(order.Id)" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Cập nhật trạng thái đơn hàng</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <form method="post" asp-page-handler="UpdateStatus" asp-route-id="@order.Id">
                                                        <div class="modal-body">
                                                            <p>Đơn hàng: <strong>@order.OrderNumber</strong></p>
                                                            <p>Trạng thái hiện tại: <span class="badge bg-@GetStatusBadgeClass(order.Status)">@order.StatusDisplay</span></p>
                                                            <div class="mb-3">
                                                                <label class="form-label">Trạng thái mới</label>
                                                                <select name="newStatus" class="form-select" required>
                                                                    <option value="">-- Chọn trạng thái --</option>
                                                                    @if (order.Status == "Pending")
                                                                    {
                                                                        <option value="Processing">Đang xử lý</option>
                                                                        <option value="Cancelled">Hủy đơn</option>
                                                                    }
                                                                    @if (order.Status == "Processing")
                                                                    {
                                                                        <option value="Shipped">Đang giao hàng</option>
                                                                        <option value="Cancelled">Hủy đơn</option>
                                                                    }
                                                                    @if (order.Status == "Shipped")
                                                                    {
                                                                        <option value="Delivered">Đã giao hàng</option>
                                                                    }
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                            <button type="submit" class="btn btn-primary">
                                                                <i class="fas fa-save"></i> Cập nhật
                                                            </button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không có đơn hàng nào.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "warning",
            "Processing" => "info",
            "Shipped" => "primary",
            "Delivered" => "success",
            "Cancelled" => "danger",
            _ => "secondary"
        };
    }
}
