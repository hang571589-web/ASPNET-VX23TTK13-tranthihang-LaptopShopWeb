@page "{id:int}"
@model LaptopShopWeb.Pages.Admin.Products.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-title">
                <i class="fas fa-edit"></i> Chỉnh sửa sản phẩm
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Sản phẩm</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
        </div>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Product.Id" />
        <div class="row">
            <div class="col-md-8">
                <div class="card admin-card mb-3">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Product.Name" class="form-label">
                                Tên sản phẩm <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Product.Name" class="form-control" />
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Description" class="form-label">
                                Mô tả
                            </label>
                            <textarea asp-for="Product.Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Product.Price" class="form-label">
                                    Giá <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Product.Price" class="form-control" type="number" step="1000" />
                                <span asp-validation-for="Product.Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Product.StockQuantity" class="form-label">
                                    Số lượng tồn kho <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Product.StockQuantity" class="form-control" type="number" />
                                <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.Brand" class="form-label">
                                Thương hiệu
                            </label>
                            <input asp-for="Product.Brand" class="form-control" />
                            <span asp-validation-for="Product.Brand" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Product.ImageUrl" class="form-label">
                                URL hình ảnh
                            </label>
                            <input asp-for="Product.ImageUrl" class="form-control" />
                            <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card admin-card mb-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-cog"></i> Thiết lập
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Product.CategoryId" class="form-label">
                                Danh mục <span class="text-danger">*</span>
                            </label>
                            <select asp-for="Product.CategoryId" class="form-select">
                                <option value="">-- Chọn danh mục --</option>
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat.Id">@cat.Name</option>
                                }
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Product.IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="Product.IsActive" class="form-check-label">
                                    Kích hoạt sản phẩm
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Product.IsFeatured" class="form-check-input" type="checkbox" />
                                <label asp-for="Product.IsFeatured" class="form-check-label">
                                    Sản phẩm nổi bật
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Cập nhật
                    </button>
                    <a asp-page="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
