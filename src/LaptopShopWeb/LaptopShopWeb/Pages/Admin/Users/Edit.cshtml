@page "{id:int}"
@model LaptopShopWeb.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-title">
                <i class="fas fa-user-edit"></i> Chỉnh sửa người dùng
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-page="/Admin/Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-page="Index">Người dùng</a></li>
                    <li class="breadcrumb-item active">Chỉnh sửa</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card admin-card">
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" asp-for="User.Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="User.Email" class="form-label">
                                Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="User.Email" class="form-control" readonly />
                            <small class="text-muted">Email không thể thay đổi</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.FullName" class="form-label">
                                Họ tên <span class="text-danger">*</span>
                            </label>
                            <input asp-for="User.FullName" class="form-control" />
                            <span asp-validation-for="User.FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.PhoneNumber" class="form-label">
                                Số điện thoại
                            </label>
                            <input asp-for="User.PhoneNumber" class="form-control" />
                            <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.Address" class="form-label">
                                Địa chỉ
                            </label>
                            <input asp-for="User.Address" class="form-control" />
                            <span asp-validation-for="User.Address" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="User.Role" class="form-label">
                                Vai trò <span class="text-danger">*</span>
                            </label>
                            <select asp-for="User.Role" class="form-select">
                                <option value="Customer">Khách hàng</option>
                                <option value="Manager">Quản lý</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <span asp-validation-for="User.Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="User.IsActive" class="form-check-input" type="checkbox" />
                                <label asp-for="User.IsActive" class="form-check-label">
                                    Tài khoản kích hoạt
                                </label>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card admin-card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle"></i> Thông tin tài khoản
                    </h5>
                </div>
                <div class="card-body">
                    <p><strong>ID:</strong> @Model.User.Id</p>
                    <p><strong>Ngày tạo:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        Thay đổi vai trò và trạng thái tài khoản cần thận trọng
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
