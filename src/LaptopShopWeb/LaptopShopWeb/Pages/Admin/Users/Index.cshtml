@page
@model LaptopShopWeb.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="admin-title">
                <i class="fas fa-users"></i> Quản lý người dùng
            </h1>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card admin-card">
        <div class="card-body">
            @if (Model.Users.Any())
            {
                <div class="table-responsive">
                    <table class="table admin-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Email</th>
                                <th>Họ tên</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Vai trò</th>
                                <th>Trạng thái</th>
                                <th>Ngày tạo</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Email</td>
                                    <td><strong>@user.FullName</strong></td>
                                    <td>@(user.PhoneNumber ?? "-")</td>
                                    <td>@(user.Address ?? "-")</td>
                                    <td>
                                        @if (user.Role == "Admin")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-crown"></i> Admin
                                            </span>
                                        }
                                        else if (user.Role == "Manager")
                                        {
                                            <span class="badge bg-primary">
                                                <i class="fas fa-user-tie"></i> Manager
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-user"></i> @user.RoleDisplay
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Kích hoạt
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-ban"></i> Vô hiệu
                                            </span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Chỉnh sửa">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            @if (user.Role != "Admin")
                                            {
                                                <form method="post" asp-page-handler="ToggleStatus" asp-route-id="@user.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-sm @(user.IsActive ? "btn-secondary" : "btn-success")" title="@(user.IsActive ? "Vô hiệu hóa" : "Kích hoạt")">
                                                        <i class="fas fa-@(user.IsActive ? "ban" : "check")"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Không có người dùng nào.</p>
                </div>
            }
        </div>
    </div>
</div>
