@page
@model IndexModel
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">
        <i class="fas fa-shopping-cart text-red"></i> Giỏ hàng của bạn
    </h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Cart.Items.Any())
    {
        <div class="text-center py-5">
            <div class="card-custom p-5">
                <i class="fas fa-shopping-cart text-muted" style="font-size: 5rem;"></i>
                <h4 class="mt-4 mb-3">Giỏ hàng trống</h4>
                <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                <a asp-page="/Products/Index" class="btn btn-primary-custom">
                    <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                <div class="card-custom p-4 mb-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold mb-0">Sản phẩm (@Model.Cart.TotalItems)</h5>
                        <form method="post" asp-page-handler="ClearCart" 
                              onsubmit="return confirm('Bạn có chắc muốn xóa toàn bộ giỏ hàng?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Xóa tất cả
                            </button>
                        </form>
                    </div>

                    @foreach (var item in Model.Cart.Items)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="@(item.ProductImageUrl ?? "/images/no-image.jpg")" 
                                         class="img-fluid rounded" 
                                         alt="@item.ProductName">
                                </div>
                                <div class="col-md-4">
                                    <h6 class="fw-bold mb-1">
                                        <a asp-page="/Products/Details" 
                                           asp-route-id="@item.ProductId" 
                                           class="text-decoration-none text-dark">
                                            @item.ProductName
                                        </a>
                                    </h6>
                                    @if (!string.IsNullOrEmpty(item.VariantDisplayName))
                                    {
                                        <small class="text-muted">
                                            <i class="fas fa-cog"></i> @item.VariantDisplayName
                                        </small>
                                    }
                                </div>
                                <div class="col-md-2">
                                    <div class="fw-bold text-red">
                                        @item.UnitPrice.ToString("N0") ₫
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <form method="post" asp-page-handler="UpdateQuantity" 
                                          asp-route-cartItemId="@item.Id" 
                                          class="d-inline">
                                        <div class="input-group input-group-sm">
                                            <button class="btn btn-outline-secondary" 
                                                    type="submit" 
                                                    name="quantity" 
                                                    value="@(item.Quantity - 1)"
                                                    @(item.Quantity <= 1 ? "disabled" : "")>
                                                <i class="fas fa-minus"></i>
                                            </button>
                                            <input type="text" 
                                                   class="form-control text-center" 
                                                   value="@item.Quantity" 
                                                   readonly>
                                            <button class="btn btn-outline-secondary" 
                                                    type="submit" 
                                                    name="quantity" 
                                                    value="@(item.Quantity + 1)">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-2 text-end">
                                    <div class="fw-bold mb-2">
                                        @item.TotalPrice.ToString("N0") ₫
                                    </div>
                                    <form method="post" asp-page-handler="RemoveItem" 
                                          asp-route-cartItemId="@item.Id"
                                          onsubmit="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <a asp-page="/Products/Index" class="btn btn-outline-custom">
                    <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                </a>
            </div>

            <div class="col-lg-4">
                <div class="card-custom p-4 sticky-top" style="top: 20px;">
                    <h5 class="fw-bold mb-3">Tổng đơn hàng</h5>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Tạm tính (@Model.Cart.TotalItems sản phẩm):</span>
                        <strong>@Model.Cart.TotalAmount.ToString("N0") ₫</strong>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>Phí vận chuyển:</span>
                        <strong class="text-success">Miễn phí</strong>
                    </div>
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between mb-4">
                        <h5 class="fw-bold mb-0">Tổng cộng:</h5>
                        <h5 class="fw-bold text-red mb-0">@Model.Cart.TotalAmount.ToString("N0") ₫</h5>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a asp-page="/Checkout/Index" class="btn btn-primary-custom btn-lg">
                            <i class="fas fa-credit-card"></i> Thanh toán
                        </a>
                    </div>

                    <div class="mt-4 text-center">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt text-success"></i> 
                            Thanh toán an toàn & bảo mật
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
