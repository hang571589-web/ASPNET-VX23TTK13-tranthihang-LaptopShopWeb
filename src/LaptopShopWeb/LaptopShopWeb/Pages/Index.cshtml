@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<section class="hero-section fade-in">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1><i class="fas fa-laptop"></i> Laptop Chính Hãng</h1>
                <p class="lead">
                    Khám phá bộ sưu tập laptop hiện đại với cấu hình mạnh mẽ, 
                    thiết kế sang trọng và giá cả cạnh tranh nhất thị trường.
                </p>
                <div class="mt-4">
                    <a asp-page="/Products/Index" class="btn btn-primary-custom btn-lg me-3">
                        <i class="fas fa-shopping-bag"></i> Xem sản phẩm
                    </a>
                    <a asp-page="/Register" class="btn btn-outline-custom btn-lg">
                        <i class="fas fa-user-plus"></i> Đăng ký ngay
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center d-none d-lg-block">
                <i class="fas fa-laptop-code" style="font-size: 15rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</section>

@if (Model.Categories.Any())
{
    <section class="container my-5 fade-in">
        <div class="section-header">
            <h2><i class="fas fa-th-large"></i> Danh Mục Sản Phẩm</h2>
        </div>
        <div class="row g-4">
            @foreach (var category in Model.Categories.Take(6))
            {
                <div class="col-md-4">
                    <div class="card-custom text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-laptop fa-4x text-red"></i>
                        </div>
                        <h4 class="card-title">@category.Name</h4>
                        <p class="card-text">@category.ProductCount sản phẩm</p>
                        <a asp-page="/Products/Index" asp-route-categoryId="@category.Id" class="btn btn-outline-custom">
                            Xem ngay <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
            }
        </div>
    </section>
}

@if (Model.FeaturedProducts.Any())
{
    <section class="container my-5 fade-in">
        <div class="section-header">
            <h2><i class="fas fa-star"></i> Sản Phẩm Nổi Bật</h2>
        </div>
        <div class="row g-4">
            @foreach (var product in Model.FeaturedProducts.Take(8))
            {
                <div class="col-md-3 col-sm-6">
                    <div class="card-custom h-100">
                        <div class="position-relative">
                            <img src="@(product.ImageUrl ?? "/images/no-image.jpg")" 
                                 class="card-img-top" 
                                 alt="@product.Name">
                            <span class="badge-featured position-absolute top-0 end-0 m-2">
                                <i class="fas fa-star"></i> Nổi bật
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            @if (!string.IsNullOrEmpty(product.Brand))
                            {
                                <p class="card-text text-muted">
                                    <span class="badge bg-dark">@product.Brand</span>
                                </p>
                            }
                            <div class="price">@product.Price.ToString("N0") ₫</div>
                            @if (product.Reviews.Any())
                            {
                                <div class="mt-2">
                                    @for (int i = 0; i < 5; i++)
                                    {
                                        if (i < product.AverageRating)
                                        {
                                            <i class="fas fa-star text-warning"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-warning"></i>
                                        }
                                    }
                                    <small class="text-muted">(@product.ReviewCount)</small>
                                </div>
                            }
                            <div class="mt-3">
                                <a asp-page="/Products/Details" asp-route-id="@product.Id" 
                                   class="btn btn-primary-custom w-100">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-page="/Products/Index" class="btn btn-secondary-custom btn-lg">
                <i class="fas fa-th"></i> Xem tất cả sản phẩm
            </a>
        </div>
    </section>
}

<section class="bg-dark-gray text-white py-5 my-5">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3">
                <div class="p-4">
                    <i class="fas fa-truck fa-3x text-red mb-3"></i>
                    <h5>Giao Hàng Nhanh</h5>
                    <p class="text-muted">Miễn phí ship toàn quốc</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4">
                    <i class="fas fa-shield-alt fa-3x text-red mb-3"></i>
                    <h5>Bảo Hành Chính Hãng</h5>
                    <p class="text-muted">Cam kết 100% chính hãng</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4">
                    <i class="fas fa-undo fa-3x text-red mb-3"></i>
                    <h5>Đổi Trả Dễ Dàng</h5>
                    <p class="text-muted">Trong vòng 7 ngày</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-4">
                    <i class="fas fa-headset fa-3x text-red mb-3"></i>
                    <h5>Hỗ Trợ 24/7</h5>
                    <p class="text-muted">Tư vấn nhiệt tình</p>
                </div>
            </div>
        </div>
    </div>
</section>
