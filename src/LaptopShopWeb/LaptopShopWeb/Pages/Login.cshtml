@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card-custom p-4 fade-in">
                <div class="text-center mb-4">
                    <i class="fas fa-laptop fa-4x text-red mb-3"></i>
                    <h2 class="fw-bold">Đăng Nhập</h2>
                    <p class="text-muted">Chào mừng bạn quay trở lại!</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label-custom">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Input.Email" 
                               class="form-control form-control-custom" 
                               placeholder="example@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label-custom">
                            <i class="fas fa-lock"></i> Mật khẩu
                        </label>
                        <input asp-for="Input.Password" 
                               class="form-control form-control-custom" 
                               placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Input.RememberMe" 
                               class="form-check-input" 
                               type="checkbox" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Ghi nhớ đăng nhập
                        </label>
                    </div>

                    <button type="submit" class="btn btn-primary-custom w-100 py-3 mb-3">
                        <i class="fas fa-sign-in-alt"></i> Đăng Nhập
                    </button>

                    <div class="text-center">
                        <p class="mb-2">
                            <a asp-page="/ForgotPassword" class="text-red text-decoration-none">
                                <i class="fas fa-key"></i> Quên mật khẩu?
                            </a>
                        </p>
                        <p>
                            Chưa có tài khoản? 
                            <a asp-page="/Register" class="text-red fw-bold text-decoration-none">
                                Đăng ký ngay <i class="fas fa-arrow-right"></i>
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
