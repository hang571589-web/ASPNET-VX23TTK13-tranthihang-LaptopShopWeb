@page
@model IndexModel
@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">
        <i class="fas fa-receipt text-red"></i> Đơn hàng của tôi
    </h2>

    @if (!Model.Orders.Any())
    {
        <div class="text-center py-5">
            <div class="card-custom p-5">
                <i class="fas fa-receipt text-muted" style="font-size: 5rem;"></i>
                <h4 class="mt-4 mb-3">Chưa có đơn hàng nào</h4>
                <p class="text-muted mb-4">Bạn chưa có đơn hàng nào trong hệ thống</p>
                <a asp-page="/Products/Index" class="btn btn-primary-custom">
                    <i class="fas fa-shopping-bag"></i> Bắt đầu mua sắm
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model.Orders.OrderByDescending(o => o.OrderDate))
            {
                <div class="col-12 mb-3">
                    <div class="card-custom p-4">
                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <div class="text-muted small">MÃ ĐƠN HÀNG</div>
                                <div class="fw-bold">#@order.Id.ToString("D6")</div>
                            </div>
                            
                            <div class="col-md-2">
                                <div class="text-muted small">NGÀY ĐẶT</div>
                                <div>@order.OrderDate.ToString("dd/MM/yyyy")</div>
                            </div>
                            
                            <div class="col-md-2">
                                <div class="text-muted small">TỔNG TIỀN</div>
                                <div class="fw-bold text-red">@order.TotalAmount.ToString("N0") ₫</div>
                            </div>
                            
                            <div class="col-md-2">
                                <div class="text-muted small">SỐ LƯỢNG</div>
                                <div>@order.TotalItems sản phẩm</div>
                            </div>
                            
                            <div class="col-md-2">
                                <div class="text-muted small">TRẠNG THÁI</div>
                                <div>
                                    @switch (order.Status)
                                    {
                                        case "Pending":
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Chờ xử lý
                                            </span>
                                            break;
                                        case "Processing":
                                            <span class="badge bg-info">
                                                <i class="fas fa-cog fa-spin"></i> Đang xử lý
                                            </span>
                                            break;
                                        case "Shipping":
                                            <span class="badge bg-primary">
                                                <i class="fas fa-truck"></i> Đang giao
                                            </span>
                                            break;
                                        case "Delivered":
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Đã giao
                                            </span>
                                            break;
                                        case "Cancelled":
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times"></i> Đã hủy
                                            </span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@order.Status</span>
                                            break;
                                    }
                                </div>
                            </div>
                            
                            <div class="col-md-2 text-end">
                                <a asp-page="/Orders/Details" 
                                   asp-route-id="@order.Id" 
                                   class="btn btn-outline-custom btn-sm">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>

                        @if (order.Items.Any())
                        {
                            <hr class="my-3">
                            <div class="row">
                                @foreach (var item in order.Items.Take(3))
                                {
                                    <div class="col-md-4">
                                        <div class="d-flex align-items-center">
                                            <img src="@(item.ProductImageUrl ?? "/images/no-image.jpg")" 
                                                 class="rounded me-2" 
                                                 style="width: 50px; height: 50px; object-fit: cover;"
                                                 alt="@item.ProductName">
                                            <div class="small">
                                                <div class="fw-bold">@item.ProductName</div>
                                                <small class="text-muted">x@item.Quantity</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                                @if (order.Items.Count() > 3)
                                {
                                    <div class="col-md-4 text-muted small align-self-center">
                                        và @(order.Items.Count() - 3) sản phẩm khác...
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>
