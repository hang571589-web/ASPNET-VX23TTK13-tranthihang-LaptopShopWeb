@page
@model IndexModel
@{
    ViewData["Title"] = "Sản phẩm";
}

<div class="container my-5">
    <form method="get">
        <div class="row">
            <div class="col-md-3">
                <div class="card-custom p-3 mb-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-filter text-red"></i> Bộ lọc
                    </h5>

                    <div class="mb-4">
                        <label class="form-label fw-semibold text-muted" for="searchTerm">Tìm kiếm</label>
                        <div class="input-group">
                            <input type="text"
                                   name="SearchTerm"
                                   id="searchTerm"
                                   class="form-control form-control-custom"
                                   placeholder="Tìm kiếm..."
                                   value="@Model.SearchTerm">
                            <button class="btn btn-primary-custom" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Danh mục</h6>
                        @foreach (var option in Model.CategoryFilters)
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="SelectedCategories"
                                       value="@option.Key"
                                       id="category-@option.Key"
                                       @(Model.IsCategoryChecked(option.Key) ? "checked" : null)>
                                <label class="form-check-label d-flex justify-content-between" for="category-@option.Key">
                                    <span>@option.Label</span>
                                    <span class="text-muted">(@option.Count)</span>
                                </label>
                            </div>
                        }
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Thương hiệu</h6>
                        @foreach (var option in Model.BrandFilters)
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="SelectedBrands"
                                       value="@option.Key"
                                       id="brand-@option.Key"
                                       @(Model.IsBrandChecked(option.Key) ? "checked" : null)>
                                <label class="form-check-label d-flex justify-content-between" for="brand-@option.Key">
                                    <span>@option.Label</span>
                                    <span class="text-muted">(@option.Count)</span>
                                </label>
                            </div>
                        }
                    </div>

                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Khoảng giá</h6>
                        @foreach (var option in Model.PriceRanges)
                        {
                            <div class="form-check mb-2">
                                <input class="form-check-input"
                                       type="radio"
                                       name="PriceRange"
                                       id="price-@option.Key"
                                       value="@option.Key"
                                       @(Model.IsPriceRangeSelected(option.Key) ? "checked" : null)>
                                <label class="form-check-label" for="price-@option.Key">@option.Label</label>
                            </div>
                        }
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-filter"></i> Áp dụng bộ lọc
                        </button>
                        <a asp-page="/Products/Index" class="btn btn-outline-secondary">
                            <i class="fas fa-undo"></i> Xóa bộ lọc
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
                    <div>
                        <h2 class="mb-1">
                            @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                            {
                                <span>Kết quả cho: "@Model.SearchTerm"</span>
                            }
                            else
                            {
                                <span>Tất cả sản phẩm</span>
                            }
                        </h2>
                        <span class="text-muted">@Model.Products.Count sản phẩm</span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <label class="fw-semibold mb-0" for="SortOption">Sắp xếp</label>
                        <select class="form-select form-select-sm w-auto" asp-for="SortOption" asp-items="Model.SortOptions" onchange="this.form.submit()"></select>
                    </div>
                </div>

            @if (Model.Products.Any())
            {
                <div class="row g-4">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="card-custom h-100 fade-in">
                                <div class="position-relative">
                                    <img src="@(product.ImageUrl ?? "/images/no-image.jpg")" 
                                         class="card-img-top" 
                                         alt="@product.Name">
                                    @if (product.IsFeatured)
                                    {
                                        <span class="badge-featured position-absolute top-0 end-0 m-2">
                                            <i class="fas fa-star"></i> Nổi bật
                                        </span>
                                    }
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    @if (!string.IsNullOrEmpty(product.Brand))
                                    {
                                        <p class="card-text text-muted mb-2">
                                            <span class="badge bg-dark">@product.Brand</span>
                                        </p>
                                    }
                                    <div class="price mb-2">@product.Price.ToString("N0") ₫</div>
                                    
                                    @if (product.Reviews.Any())
                                    {
                                        <div class="mb-2">
                                            @for (int i = 0; i < 5; i++)
                                            {
                                                if (i < product.AverageRating)
                                                {
                                                    <i class="fas fa-star text-warning"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star text-warning"></i>
                                                }
                                            }
                                            <small class="text-muted">(@product.ReviewCount)</small>
                                        </div>
                                    }
                                    
                                    <div class="d-grid">
                                        <a asp-page="/Products/Details" 
                                           asp-route-id="@product.Id" 
                                           class="btn btn-primary-custom">
                                            <i class="fas fa-eye"></i> Xem chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
                    <h4>Không tìm thấy sản phẩm nào</h4>
                    <p class="text-muted">Vui lòng thử tìm kiếm với từ khóa khác</p>
                    <a asp-page="/Products/Index" class="btn btn-primary-custom">
                        <i class="fas fa-redo"></i> Xem tất cả sản phẩm
                    </a>
                </div>
            }
        </div>
        </div>
    </form>
</div>
