@page
@model ProfileModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container my-5">
    <h2 class="fw-bold mb-4">
        <i class="fas fa-user-circle text-red"></i> Thông tin cá nhân
    </h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-4">
            <div class="card-custom p-4 text-center sticky-top" style="top: 20px;">
                <div class="mb-3">
                    <i class="fas fa-user-circle text-red" style="font-size: 6rem;"></i>
                </div>
                <h5 class="fw-bold mb-1">@Model.CurrentUser.FullName</h5>
                <p class="text-muted mb-3">@Model.CurrentUser.Email</p>
                
                <div class="badge bg-dark mb-3">
                    @if (Model.CurrentUser.Role == "Manager")
                    {
                        <i class="fas fa-user-shield"></i> <text>Quản lý</text>
                    }
                    else
                    {
                        <i class="fas fa-user"></i> <text>Khách hàng</text>
                    }
                </div>

                <hr>

                <div class="text-start">
                    <small class="text-muted d-block mb-1">Ngày tham gia</small>
                    <div class="mb-3">
                        <i class="fas fa-calendar text-red"></i> 
                        @Model.CurrentUser.CreatedAt.ToString("dd/MM/yyyy")
                    </div>

                    @if (!string.IsNullOrEmpty(Model.CurrentUser.PhoneNumber))
                    {
                        <small class="text-muted d-block mb-1">Số điện thoại</small>
                        <div class="mb-3">
                            <i class="fas fa-phone text-red"></i> @Model.CurrentUser.PhoneNumber
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.CurrentUser.Address))
                    {
                        <small class="text-muted d-block mb-1">Địa chỉ</small>
                        <div>
                            <i class="fas fa-map-marker-alt text-red"></i> @Model.CurrentUser.Address
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <!-- Update Profile Form -->
            <div class="card-custom p-4 mb-4">
                <h5 class="fw-bold mb-3">
                    <i class="fas fa-edit"></i> Cập nhật thông tin
                </h5>
                
                <form method="post" asp-page-handler="UpdateProfile">
                    <div class="mb-3">
                        <label asp-for="Input.FullName" class="form-label">Họ và tên</label>
                        <input asp-for="Input.FullName" class="form-control" placeholder="Nguyễn Văn A">
                        <span asp-validation-for="Input.FullName" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">Số điện thoại</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="0912345678">
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Email</label>
                            <input type="text" class="form-control" value="@Model.CurrentUser.Email" disabled>
                            <small class="text-muted">Email không thể thay đổi</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Address" class="form-label">Địa chỉ</label>
                        <textarea asp-for="Input.Address" class="form-control" rows="3" 
                                  placeholder="Số nhà, tên đường, phường/xã, quận/huyện..."></textarea>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary-custom">
                            <i class="fas fa-save"></i> Lưu thay đổi
                        </button>
                    </div>
                </form>
            </div>

            <!-- Change Password Form -->
            <div class="card-custom p-4">
                <h5 class="fw-bold mb-3">
                    <i class="fas fa-key"></i> Đổi mật khẩu
                </h5>
                
                <form method="post" asp-page-handler="ChangePassword">
                    <div class="mb-3">
                        <label asp-for="PasswordInput.CurrentPassword" class="form-label">Mật khẩu hiện tại</label>
                        <input asp-for="PasswordInput.CurrentPassword" class="form-control" placeholder="••••••••">
                        <span asp-validation-for="PasswordInput.CurrentPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PasswordInput.NewPassword" class="form-label">Mật khẩu mới</label>
                        <input asp-for="PasswordInput.NewPassword" class="form-control" placeholder="••••••••">
                        <span asp-validation-for="PasswordInput.NewPassword" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PasswordInput.ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input asp-for="PasswordInput.ConfirmPassword" class="form-control" placeholder="••••••••">
                        <span asp-validation-for="PasswordInput.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="alert alert-warning">
                        <small>
                            <i class="fas fa-info-circle"></i>
                            Mật khẩu phải có ít nhất 6 ký tự
                        </small>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-outline-custom">
                            <i class="fas fa-shield-alt"></i> Đổi mật khẩu
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
