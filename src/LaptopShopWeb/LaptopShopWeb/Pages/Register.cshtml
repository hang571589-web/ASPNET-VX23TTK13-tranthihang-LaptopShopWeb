@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card-custom p-4 fade-in">
                <div class="text-center mb-4">
                    <i class="fas fa-user-plus fa-4x text-red mb-3"></i>
                    <h2 class="fw-bold">Đăng Ký Tài Khoản</h2>
                    <p class="text-muted">Tạo tài khoản để bắt đầu mua sắm!</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.FullName" class="form-label-custom">
                                <i class="fas fa-user"></i> Họ và tên
                            </label>
                            <input asp-for="Input.FullName" 
                                   class="form-control form-control-custom" 
                                   placeholder="Nguyễn Văn A" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Email" class="form-label-custom">
                                <i class="fas fa-envelope"></i> Email
                            </label>
                            <input asp-for="Input.Email" 
                                   class="form-control form-control-custom" 
                                   placeholder="example@email.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Password" class="form-label-custom">
                                <i class="fas fa-lock"></i> Mật khẩu
                            </label>
                            <input asp-for="Input.Password" 
                                   class="form-control form-control-custom" 
                                   placeholder="••••••••" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label-custom">
                                <i class="fas fa-lock"></i> Xác nhận mật khẩu
                            </label>
                            <input asp-for="Input.ConfirmPassword" 
                                   class="form-control form-control-custom" 
                                   placeholder="••••••••" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label-custom">
                                <i class="fas fa-phone"></i> Số điện thoại
                            </label>
                            <input asp-for="Input.PhoneNumber" 
                                   class="form-control form-control-custom" 
                                   placeholder="0123456789" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.Address" class="form-label-custom">
                                <i class="fas fa-map-marker-alt"></i> Địa chỉ
                            </label>
                            <input asp-for="Input.Address" 
                                   class="form-control form-control-custom" 
                                   placeholder="Hà Nội, Việt Nam" />
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary-custom w-100 py-3 mb-3">
                        <i class="fas fa-user-plus"></i> Đăng Ký Ngay
                    </button>

                    <div class="text-center">
                        <p>
                            Đã có tài khoản? 
                            <a asp-page="/Login" class="text-red fw-bold text-decoration-none">
                                Đăng nhập ngay <i class="fas fa-arrow-right"></i>
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
