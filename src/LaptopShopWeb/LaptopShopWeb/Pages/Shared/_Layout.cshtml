@using LaptopShopWeb.Helpers
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LaptopShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-custom">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-page="/Index">
                    <i class="fas fa-laptop"></i> LaptopShop
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="fas fa-home"></i> Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Products/Index">
                                <i class="fas fa-laptop"></i> Sản phẩm
                            </a>
                        </li>

                        @if (AuthHelper.IsAuthenticated(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Cart/Index">
                                    <i class="fas fa-shopping-cart"></i> Giỏ hàng
                                </a>
                            </li>

                            @if (AuthHelper.IsInRole(User, "Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-cog"></i> Quản trị
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-page="/Admin/Index">
                                            <i class="fas fa-tachometer-alt"></i> Dashboard
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Products/Index">
                                            <i class="fas fa-laptop"></i> Sản phẩm
                                        </a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Categories/Index">
                                            <i class="fas fa-tags"></i> Danh mục
                                        </a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Orders/Index">
                                            <i class="fas fa-shopping-cart"></i> Đơn hàng
                                        </a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Users/Index">
                                            <i class="fas fa-users"></i> Người dùng
                                        </a></li>
                                    </ul>
                                </li>
                            }

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i> @AuthHelper.GetName(User)
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Profile">Thông tin</a></li>
                                    <li><a class="dropdown-item" asp-page="/Orders/Index">Đơn hàng</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Logout">Đăng xuất</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Login">
                                    <i class="fas fa-sign-in-alt"></i> Đăng nhập
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link btn btn-primary-custom px-3" asp-page="/Register">
                                    Đăng ký
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-custom mt-5 py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-laptop text-red"></i> LaptopShop
                    </h5>
                    <p class="text-muted">
                        Chuyên cung cấp laptop chính hãng
                    </p>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Liên kết</h6>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Index" class="text-muted">Trang chủ</a></li>
                        <li><a asp-page="/Products/Index" class="text-muted">Sản phẩm</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h6 class="fw-bold mb-3">Liên hệ</h6>
                    <p class="text-muted mb-1">
                        <i class="fas fa-envelope"></i> info@laptopshop.vn
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>